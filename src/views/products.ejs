<h1>Products</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        <% key.forEach(function(product) { %>
        <tr>
            <th scope="row"><%= product.id %></th>
            <td><%= product.name %></td>
            <td><%= product.desc %></td>
            <td><%= product.price %></td>
            <td>
                <img src="<%= product.imageURL %>" style="max-width: 100px;" />
            </td>
            <td>
                <a href="/update_product/<%= product.id %>" class="btn btn-warning btn-sm">Update</a>
            </td>
            <td>
               <button class="btn btn-danger" onclick="deleteProduct('<%= product.id %>')">Delete</button>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
